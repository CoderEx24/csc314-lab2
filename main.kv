GridLayout:
    rows: 2
    cols: 1

    ScrollView:
        do_scroll_y: True
        do_scroll_x: False
        size_hint: 1, 9
        Label:
            id: chat
            size_hint: 1, 1
            text_size: (self.width, self.height - 70)
            font_size: dp(20)
            halign: 'left'

    TextInput:
        on_text_validate: app.on_message_received(self.text); self.text = ''
        size_hint_x: 1
        id: message
        multiline: False

