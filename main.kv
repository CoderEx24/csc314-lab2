<ChatMessage>:
    valign: 'middle'
    halign: 'bottom'

GridLayout:
    rows: 2
    cols: 1

    RecycleView:
        viewclass: 'Label'
        size_hint_y: 9
        id: chat
        
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

    GridLayout:
        size_hint_y: 1
        rows: 1
        cols: 2

        TextInput:
            on_text_validate: app.on_message_received(self.text); self.text = ''
            size_hint_x: 4
            id: message
            multiline: False

        Button:
            size_hint_x: 1
            text: '>'
